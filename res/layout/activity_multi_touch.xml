<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultiTouchActivity" >

    <include
        android:id="@+id/titlebar_multi_touch"
        layout="@layout/titlebar_activity" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar_multi_touch"
        android:padding="@dimen/activity_padding_normal" >

        <TextView
            android:id="@+id/demo_desc_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_corner_gray"
            android:drawableLeft="@drawable/ic_info"
            android:gravity="center"
            android:padding="5dip"
            android:text="@string/multi_touch_desc"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/multi_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/demo_desc_tip"
            android:background="@color/black_10p"
            android:contentDescription="@null"
            android:scaleType="matrix"
            android:src="@drawable/github_colorful" />
    </RelativeLayout>

</RelativeLayout>