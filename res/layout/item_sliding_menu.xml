<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_selector"
    android:orientation="horizontal"
    android:padding="2dip" >

    <ImageView
        android:id="@+id/item_menu_icon"
        android:layout_width="@dimen/menu_item_height"
        android:layout_height="@dimen/menu_item_height"
        android:contentDescription="@null"
        android:padding="5dip"
        android:src="@drawable/ic_cocos2d" />

    <TextView
        android:id="@+id/item_menu_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="@string/app_name"
        android:textColor="@color/github_blue"
        android:textSize="16sp" />

</LinearLayout>